#!/bin/bash
set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get the root directory of the git repository
GIT_ROOT=$(git rev-parse --show-toplevel)
cd "$GIT_ROOT"

echo "üöÄ Running pre-push checks..."

# Ensure we aren't running in watch mode
export CI=true

# Store exit codes to report all failures at once
FAILED=0
FAILURE_MESSAGES=()

# Function to run a check and capture failures
run_check() {
    local check_name="$1"
    local check_command="$2"

    echo -e "\nüîç ${check_name}..."

    if eval "$check_command"; then
        echo -e "${GREEN}‚úÖ ${check_name} passed${NC}"
    else
        FAILED=1
        FAILURE_MESSAGES+=("${check_name}")
        echo -e "${RED}‚ùå ${check_name} failed${NC}"
    fi
}

# Determine what files are actually being pushed
# Compare current branch HEAD against its upstream tracking branch
CURRENT_BRANCH=$(git rev-parse --abbrev-ref HEAD)
UPSTREAM=$(git rev-parse --abbrev-ref --symbolic-full-name @{u} 2>/dev/null || echo "")

if [ -n "$UPSTREAM" ]; then
    # Has upstream - compare against it
    CHANGED_FILES=$(git diff --name-only "$UPSTREAM" HEAD 2>/dev/null || true)
else
    # No upstream (new branch) - compare against origin/develop or origin/main
    BASE_BRANCH=$(git rev-parse --verify origin/develop 2>/dev/null || git rev-parse --verify origin/main 2>/dev/null || echo "")
    if [ -n "$BASE_BRANCH" ]; then
        MERGE_BASE=$(git merge-base HEAD "$BASE_BRANCH" 2>/dev/null || echo "$BASE_BRANCH")
        CHANGED_FILES=$(git diff --name-only "$MERGE_BASE" HEAD 2>/dev/null || true)
    else
        CHANGED_FILES=""
    fi
fi

# Remove duplicates and empty lines
CHANGED_FILES=$(echo "$CHANGED_FILES" | tr ' ' '\n' | sort -u | grep -v '^$' || true)

# Check if only documentation/config files changed (no code changes)
CODE_FILES=$(echo "$CHANGED_FILES" | grep -E '\.(ts|tsx|js|jsx|json)$' | grep -v 'package\.json' | grep -v '\.eslintrc' || true)
TS_FILES=$(echo "$CHANGED_FILES" | grep -E '\.(ts|tsx)$' || true)

if [ -z "$CHANGED_FILES" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  No files detected in push - skipping checks${NC}"
elif [ -z "$CODE_FILES" ]; then
    echo -e "${GREEN}üìù Only documentation/config files changed - skipping build and tests${NC}"
    echo "Changed files:"
    echo "$CHANGED_FILES" | sed 's/^/  /'
else
    echo -e "\nüì¶ Code changes detected"
    echo "Changed files:"
    echo "$CHANGED_FILES" | sed 's/^/  /'

    # Run all quality checks (Prettier moved to pre-commit)
    run_check "TypeScript build verification" "./scripts/deployment/verify-build.sh"
    run_check "ESLint" "pnpm lint"

    # Check for untested source files (strict mode - blocks push if untested files found)
    run_check "Untested files check" "node scripts/testing/check-untested-files.js --strict"

    echo -e "\nüß™ Running unit test suite..."
    run_check "Unit tests" "pnpm test"
fi

# Report results
if [ $FAILED -eq 1 ]; then
    echo -e "\n${RED}‚ùå Pre-push failed! The following checks failed:${NC}"
    for msg in "${FAILURE_MESSAGES[@]}"; do
        echo -e "${RED}  - $msg${NC}"
    done
    echo -e "\n${YELLOW}Fix the issues before pushing, or use: git push --no-verify${NC}"
    exit 1
fi

echo -e "\n${GREEN}‚úÖ All pre-push checks passed! Pushing to remote...${NC}"
