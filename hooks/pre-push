#!/bin/bash
set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get the root directory of the git repository
GIT_ROOT=$(git rev-parse --show-toplevel)
cd "$GIT_ROOT"

echo "ğŸš€ Running pre-push checks..."

# Ensure we aren't running in watch mode
export CI=true

# Store exit codes to report all failures at once
FAILED=0
FAILURE_MESSAGES=()

# Function to run a check and capture failures
run_check() {
    local check_name="$1"
    local check_command="$2"

    echo -e "\nğŸ” ${check_name}..."

    if eval "$check_command"; then
        echo -e "${GREEN}âœ… ${check_name} passed${NC}"
    else
        FAILED=1
        FAILURE_MESSAGES+=("${check_name}")
        echo -e "${RED}âŒ ${check_name} failed${NC}"
    fi
}

# Check for v3 TypeScript files in the repository
V3_TS_FILES=$(find packages services -name "*.ts" -o -name "*.tsx" 2>/dev/null || true)

if [ -n "$V3_TS_FILES" ]; then
    echo -e "\nğŸ“¦ V3 TypeScript changes detected"

    # Run all quality checks
    run_check "Prettier formatting" "pnpm format"
    run_check "TypeScript build verification" "./scripts/deployment/verify-build.sh"
    run_check "ESLint" "pnpm lint"

    # Check for untested source files (informational - will be strict once backlog cleared)
    # TODO: Change to --strict once all current untested files are addressed
    echo -e "\nğŸ“Š Untested files report (informational):"
    node scripts/testing/check-untested-files.js || true

    echo -e "\nğŸ§ª Running unit test suite..."
    run_check "Unit tests" "pnpm test"
fi

# Report results
if [ $FAILED -eq 1 ]; then
    echo -e "\n${RED}âŒ Pre-push failed! The following checks failed:${NC}"
    for msg in "${FAILURE_MESSAGES[@]}"; do
        echo -e "${RED}  - $msg${NC}"
    done
    echo -e "\n${YELLOW}Fix the issues before pushing, or use: git push --no-verify${NC}"
    exit 1
fi

echo -e "\n${GREEN}âœ… All pre-push checks passed! Pushing to remote...${NC}"
