#!/bin/bash
set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get the root directory of the git repository
GIT_ROOT=$(git rev-parse --show-toplevel)
cd "$GIT_ROOT"

# Minimal pre-commit: Only check for dangerous migration operations
# Full checks (lint, typecheck, tests) run in pre-push hook

# Check for Prisma migration changes that might drop vector index without recreating
STAGED_MIGRATION_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '^prisma/migrations/.*\.sql$' || true)

if [ -n "$STAGED_MIGRATION_FILES" ]; then
    echo -e "üìä Checking Prisma migrations for dangerous operations..."
    for file in $STAGED_MIGRATION_FILES; do
        # Only flag if DROP INDEX exists WITHOUT a corresponding CREATE INDEX
        if grep -q 'DROP INDEX.*idx_memories_embedding' "$file" && ! grep -q 'CREATE INDEX.*idx_memories_embedding' "$file"; then
            echo -e "${RED}‚ùå DANGER: Migration drops vector index WITHOUT recreating it!${NC}"
            echo -e "${RED}   File: $file${NC}"
            echo -e "${YELLOW}   The idx_memories_embedding index is essential for pgvector performance.${NC}"
            echo -e "${YELLOW}   Either remove the DROP INDEX or add a CREATE INDEX statement.${NC}"
            exit 1
        fi
    done
    echo -e "${GREEN}‚úÖ Migrations safe${NC}"
fi
