# DDD Testing Configuration
# Copy to .env to enable DDD features

# Enable DDD command system integration
FEATURE_FLAG_DDD_COMMANDS_INTEGRATION=true
FEATURE_FLAG_DDD_COMMANDS_ENABLED=true

# Enable specific personality commands
FEATURE_FLAG_DDD_COMMANDS_ADD=true
FEATURE_FLAG_DDD_COMMANDS_REMOVE=true
FEATURE_FLAG_DDD_COMMANDS_INFO=true
FEATURE_FLAG_DDD_COMMANDS_ALIAS=true
FEATURE_FLAG_DDD_COMMANDS_LIST=true

# Enable conversation commands
FEATURE_FLAG_DDD_COMMANDS_RESET=true
FEATURE_FLAG_DDD_COMMANDS_ACTIVATE=true
FEATURE_FLAG_DDD_COMMANDS_DEACTIVATE=true
FEATURE_FLAG_DDD_COMMANDS_AUTORESPOND=true

# Enable authentication commands
FEATURE_FLAG_DDD_COMMANDS_AUTH=true
FEATURE_FLAG_DDD_COMMANDS_VERIFY=true

# Enable DDD personality system
FEATURE_FLAG_DDD_PERSONALITY_READ=true
FEATURE_FLAG_DDD_PERSONALITY_WRITE=true

# Enable dual-write for safety during migration
FEATURE_FLAG_DDD_PERSONALITY_DUAL_WRITE=true

# Enable event system
FEATURE_FLAG_DDD_EVENTS_ENABLED=true

# Enable DDD conversation system
FEATURE_FLAG_DDD_CONVERSATION_READ=true

# Enable additional command system flags
FEATURE_FLAG_DDD_COMMANDS_FALLBACK_ON_ERROR=true
FEATURE_FLAG_DDD_COMMANDS_SLASH=true
FEATURE_FLAG_DDD_COMMANDS_HIDE_LEGACY=true

# Enable general command system flags
FEATURE_FLAG_COMMANDS_SLASH_ENABLED=true
FEATURE_FLAG_COMMANDS_TEXT_ENABLED=true

# Other
FEATURE_FLAG_FEATURES_COMPARISON_TESTING=false
FEATURE_FLAG_FEATURES_ENHANCED_CONTEXT=false
