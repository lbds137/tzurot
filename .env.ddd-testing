# DDD Testing Configuration
# Copy to .env to enable DDD features

# Enable DDD command system integration
FEATURE_FLAG_DDD_COMMANDS_INTEGRATION=true
FEATURE_FLAG_DDD_COMMANDS_ENABLED=true

# Enable DDD personality system
FEATURE_FLAG_DDD_PERSONALITY_READ=true
FEATURE_FLAG_DDD_PERSONALITY_WRITE=true

# Enable dual-write for safety during migration
FEATURE_FLAG_DDD_PERSONALITY_DUAL_WRITE=true

# Enable event system
FEATURE_FLAG_DDD_EVENTS_ENABLED=true

# Enable additional command system flags
FEATURE_FLAG_DDD_COMMANDS_FALLBACK_ON_ERROR=true
FEATURE_FLAG_DDD_COMMANDS_SLASH=true
FEATURE_FLAG_DDD_COMMANDS_HIDE_LEGACY=true

# Other
FEATURE_FLAG_FEATURES_ENHANCED_CONTEXT=false
