{
  "name": "tzurot",
  "version": "3.0.0-beta.69",
  "private": true,
  "description": "Next-generation Discord AI bot with customizable personalities",
  "type": "module",
  "scripts": {
    "postinstall": "prisma generate || true",
    "prepare": "husky || true",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start:bot": "pnpm --filter @tzurot/bot-client start",
    "start:gateway": "pnpm --filter @tzurot/api-gateway start",
    "start:worker": "pnpm --filter @tzurot/ai-worker start",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:int": "vitest run --config vitest.int.config.ts",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:all": "pnpm test && pnpm test:int",
    "test:low-mem": "pnpm --workspace-concurrency=1 --filter './services/*' --filter './packages/*' test",
    "test:failures": "turbo run test --output-logs=errors-only -- --reporter=verbose",
    "test:summary": "pnpm ops dev:test-summary",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "lint:errors": "turbo run lint --output-logs=errors-only -- --quiet --format=pretty",
    "typecheck": "turbo run typecheck",
    "typecheck:spec": "turbo run typecheck:spec",
    "cpd": "jscpd ./services ./packages --config .jscpd.json",
    "cpd:report": "jscpd ./services ./packages --config .jscpd.json --reporters html",
    "depcruise": "depcruise services/ packages/ --config .dependency-cruiser.cjs",
    "depcruise:baseline": "depcruise services/ packages/ --config .dependency-cruiser.cjs --output-type baseline > .dependency-cruiser-baseline.json",
    "depcruise:graph": "depcruise services/ packages/ --config .dependency-cruiser.cjs --output-type dot | dot -T svg > reports/dependency-graph.svg",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "quality": "pnpm lint && pnpm cpd && pnpm depcruise && pnpm typecheck && pnpm typecheck:spec",
    "focus:lint": "pnpm ops dev:lint",
    "focus:test": "pnpm ops dev:test",
    "focus:build": "pnpm ops dev:focus build",
    "focus:typecheck": "pnpm ops dev:typecheck",
    "format": "prettier --write .",
    "audit:contracts": "pnpm ops test:audit-contracts",
    "audit:services": "pnpm ops test:audit-services",
    "generate:pglite": "pnpm ops test:generate-schema",
    "generate:command-types": "tsx scripts/generate-command-types.ts",
    "update-deps": "pnpm ops dev:update-deps",
    "import-personality": "pnpm ops data:import",
    "bulk-import": "pnpm ops data:bulk-import",
    "bulk-import:dry-run": "pnpm ops data:bulk-import --dry-run",
    "bulk-import:skip-memories": "pnpm ops data:bulk-import --skip-memories",
    "migrate-legacy-persona": "tsx scripts/data/import-personality/migrate-legacy-persona.ts",
    "check:migrations": "pnpm ops db:check-safety",
    "bump-version": "pnpm ops release:bump",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:status": "changeset status",
    "ops": "tsx packages/tooling/src/cli.ts",
    "with-env": "pnpm ops run --env"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@electric-sql/pglite": "^0.3.15",
    "@eslint/js": "^9.39.2",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@secretlint/secretlint-rule-preset-recommend": "^11.3.1",
    "@types/node": "^25.2.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "dependency-cruiser": "^17.3.7",
    "dotenv": "^17.2.4",
    "eslint": "^9.39.2",
    "eslint-formatter-pretty": "^7.0.0",
    "eslint-plugin-sonarjs": "^3.0.6",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.8",
    "knip": "^5.83.1",
    "lint-staged": "^16.2.7",
    "pglite-prisma-adapter": "^0.7.2",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "prisma": "^7.3.0",
    "secretlint": "^11.3.1",
    "tsx": "^4.21.0",
    "turbo": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=25.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.22.0",
  "dependencies": {
    "openai": "^6.18.0",
    "uuid": "^13.0.0"
  },
  "pnpm": {
    "publicHoistPattern": [
      "*debug*",
      "*eslint*"
    ]
  }
}
