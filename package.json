{
  "name": "tzurot",
  "version": "3.0.0-alpha.45",
  "private": true,
  "description": "Next-generation Discord AI bot with customizable personalities",
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel --filter './services/*' dev",
    "build": "pnpm -r build",
    "start:bot": "pnpm --filter @tzurot/bot-client start",
    "start:gateway": "pnpm --filter @tzurot/api-gateway start",
    "start:worker": "pnpm --filter @tzurot/ai-worker start",
    "test": "pnpm --filter './services/*' --filter './packages/*' test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "update-deps": "tsx scripts/update-deps.ts",
    "import-personality": "tsx scripts/import-personality/import-personality.ts",
    "bulk-import": "tsx scripts/import-personality/bulk-import.ts",
    "bulk-import:dry-run": "tsx scripts/import-personality/bulk-import.ts --dry-run",
    "bulk-import:skip-memories": "tsx scripts/import-personality/bulk-import.ts --skip-memories",
    "migrate-legacy-persona": "tsx scripts/import-personality/migrate-legacy-persona.ts",
    "migrate-memory-format": "tsx scripts/migrate-memory-format.ts",
    "migrate-memory-format:dry-run": "tsx scripts/migrate-memory-format.ts --dry-run"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@langchain/core": "^1.0.6",
    "@langchain/openai": "^1.1.2",
    "@prisma/client": "^6.19.0",
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.10",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.10"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.22.0",
  "dependencies": {
    "openai": "^6.9.1",
    "uuid": "^13.0.0"
  }
}
