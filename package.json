{
  "name": "tzurot",
  "version": "3.0.0-alpha.2",
  "private": true,
  "description": "Next-generation Discord AI bot with customizable personalities",
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel --filter './services/*' dev",
    "build": "pnpm --filter './services/*' build",
    "start:bot": "pnpm --filter @tzurot/bot-client start",
    "start:gateway": "pnpm --filter @tzurot/api-gateway start",
    "start:worker": "pnpm --filter @tzurot/ai-worker start",
    "test": "pnpm --filter './services/*' --filter './packages/*' test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@prisma/client": "^6.16.3",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "debug": "^4.4.1",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "prettier": "^3.2.4",
    "prisma": "^6.16.3",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "dependencies": {
    "@qdrant/js-client-rest": "^1.15.1",
    "openai": "^6.1.0",
    "uuid": "^13.0.0"
  }
}
