{
  "name": "tzurot",
  "version": "3.0.0-beta.39",
  "private": true,
  "description": "Next-generation Discord AI bot with customizable personalities",
  "type": "module",
  "scripts": {
    "postinstall": "prisma generate || true",
    "dev": "pnpm --parallel --filter './services/*' dev",
    "build": "pnpm -r build",
    "start:bot": "pnpm --filter @tzurot/bot-client start",
    "start:gateway": "pnpm --filter @tzurot/api-gateway start",
    "start:worker": "pnpm --filter @tzurot/ai-worker start",
    "test": "pnpm --filter './services/*' --filter './packages/*' test",
    "test:coverage": "pnpm --filter './services/*' --filter './packages/*' test:coverage",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:low-mem": "pnpm --workspace-concurrency=1 --filter './services/*' --filter './packages/*' test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "audit:contracts": "tsx scripts/testing/audit-contract-coverage.ts",
    "audit:services": "tsx scripts/testing/audit-service-integration.ts",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "update-deps": "tsx scripts/utils/update-deps.ts",
    "import-personality": "tsx scripts/data/import-personality/import-personality.ts",
    "bulk-import": "tsx scripts/data/import-personality/bulk-import.ts",
    "bulk-import:dry-run": "tsx scripts/data/import-personality/bulk-import.ts --dry-run",
    "bulk-import:skip-memories": "tsx scripts/data/import-personality/bulk-import.ts --skip-memories",
    "migrate-legacy-persona": "tsx scripts/data/import-personality/migrate-legacy-persona.ts",
    "migrate-memory-format": "tsx scripts/_archive/qdrant/migrate-memory-format.ts",
    "migrate-memory-format:dry-run": "tsx scripts/_archive/qdrant/migrate-memory-format.ts --dry-run",
    "check:migrations": "bash -c 'for f in prisma/migrations/**/*.sql; do if grep -q \"DROP INDEX.*idx_memories_embedding\" \"$f\" && ! grep -q \"CREATE INDEX.*idx_memories_embedding\" \"$f\"; then echo \"⚠️  DANGER: $f drops vector index without recreating!\"; exit 1; fi; done; echo \"✅ Migrations safe\"'",
    "bump-version": "bash scripts/utils/bump-version.sh"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "@eslint/js": "^9.39.2",
    "@langchain/core": "^1.1.8",
    "@langchain/openai": "^1.2.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^4.0.16",
    "bullmq": "^5.66.4",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "express": "^5.2.1",
    "globals": "^17.0.0",
    "http-status-codes": "^2.3.0",
    "ioredis-mock": "^8.13.1",
    "pglite-prisma-adapter": "^0.7.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "prisma": "^7.2.0",
    "redis": "^5.10.0",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=25.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.22.0",
  "dependencies": {
    "openai": "^6.15.0",
    "uuid": "^13.0.0"
  },
  "pnpm": {
    "publicHoistPattern": [
      "*debug*",
      "*eslint*",
      "@prisma/client-runtime-utils"
    ]
  }
}
