{
  "name": "@tzurot/tooling",
  "version": "3.0.0-beta.41",
  "private": true,
  "description": "Internal tooling and CLI for Tzurot monorepo operations",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./eslint": {
      "import": "./dist/eslint/index.js",
      "types": "./dist/eslint/index.d.ts"
    }
  },
  "bin": {
    "ops": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@tzurot/common-types": "workspace:*",
    "cac": "^6.7.14",
    "chalk": "^5.6.2",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/estree": "^1.0.8",
    "@types/node": "^25.0.6",
    "@vitest/coverage-v8": "^4.0.17",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    }
  }
}
