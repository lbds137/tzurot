{
  "name": "@tzurot/embeddings",
  "version": "3.0.0-beta.60",
  "private": true,
  "type": "module",
  "description": "Local embedding service using bge-small-en-v1.5 for semantic similarity",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "find src -name '*.js' -type f -delete && find src -name '*.js.map' -type f -delete",
    "build": "tsc",
    "pretest": "npm run clean",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
    "@tzurot/common-types": "workspace:*",
    "onnxruntime-node": "^1.23.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.10"
  }
}
