# Tzurot Bot Environment Configuration
# Copy this file to .env and fill in your values

# ===== Core Discord Configuration =====
# Discord bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token

# ===== Bot Configuration =====
# These can be different for each environment
NODE_ENV=production                # or 'development'
BOT_NAME=Tzurot                   # or 'Rotzot' for development
BOT_PREFIX=!tz                    # or '!rtz' for development
BOT_MENTION_CHAR=@                # or '&' for development
BOT_OWNER_ID=your_discord_user_id

# ===== AI Service Configuration =====
SERVICE_API_BASE_URL=https://api.example.com
SERVICE_ID=your_service_id
SERVICE_APP_ID=your_service_app_id
SERVICE_API_KEY=your_service_api_key
SERVICE_WEBSITE=https://app.example.com

# Profile information endpoint
PROFILE_INFO_ENDPOINT=https://profiles.example.com/api

# Owner's personalities (comma-separated)
BOT_OWNER_PERSONALITIES=albert-einstein,sigmund-freud,carl-jung,marie-curie

# ===== Public URL Configuration =====
# The public URL where this bot is hosted (for webhooks, avatars, etc)
BOT_PUBLIC_BASE_URL=https://your-bot-domain.com

# ===== HTTP Server Configuration =====
# Port for the HTTP server (health checks, webhooks, avatars)
PORT=3000

# ===== GitHub Integration (Optional) =====
# For release notifications via webhook
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# ===== Logging Configuration =====
LOG_LEVEL=info  # debug, info, warn, error

# ===== Railway Specific (Auto-set by Railway) =====
# These are automatically set by Railway, don't set manually
# RAILWAY_ENVIRONMENT
# RAILWAY_STATIC_URL
# RAILWAY_PUBLIC_DOMAIN