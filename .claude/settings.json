{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit:*.ts|Edit:*.tsx|Write:*.ts|Write:*.tsx",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm exec eslint --fix \"$CLAUDE_FILE_PATH\" 2>&1 | head -50 || true"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read(*)",
      "Write(*)",
      "Edit(*)",
      "MultiEdit(*)",
      "LS(*)",
      "Glob(*)",
      "Grep(*)",
      "Task(*)",
      "TodoRead",
      "TodoWrite(*)",
      "Batch(*)",
      "Fetch(*)",
      "Search(*)",
      "WebSearch",
      "Skill(*)",
      "Bash",
      "mcp__ide__getDiagnostics",
      "mcp__council__*",
      "WebFetch(domain:blog.platformatic.dev)",
      "WebFetch(domain:docs.github.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:ai.google.dev)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:docs.bullmq.io)",
      "WebFetch(domain:docs.railway.app)",
      "WebFetch(domain:docs.railway.com)",
      "WebFetch(domain:nixpacks.com)",
      "WebFetch(domain:openrouter.ai)",
      "WebFetch(domain:discord-api-types.dev)"
    ],
    "deny": [],
    "defaultMode": "acceptEdits"
  },
  "enableAllProjectMcpServers": false
}
