{
  "name": "@tzurot/bot-client",
  "version": "3.0.0-alpha.35",
  "private": true,
  "type": "module",
  "description": "Discord client service for Tzurot bot",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
