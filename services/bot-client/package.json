{
  "name": "@tzurot/bot-client",
  "version": "3.0.0-beta.43",
  "private": true,
  "type": "module",
  "description": "Discord client service for Tzurot bot",
  "main": "dist/index.js",
  "scripts": {
    "clean": "find src -name '*.js' -type f -delete && find src -name '*.js.map' -type f -delete",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "pretest": "npm run clean",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "deploy-commands": "tsx scripts/deploy-commands.ts",
    "deploy-commands:railway": "railway run --service bot-client pnpm deploy-commands"
  },
  "dependencies": {
    "@tzurot/common-types": "workspace:*",
    "discord.js": "^14.25.1",
    "ioredis": "^5.9.1",
    "pino": "^10.1.1",
    "pino-pretty": "^13.1.3",
    "redis": "^5.10.0",
    "sharp": "^0.34.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "dotenv": "^17.2.3"
  }
}
