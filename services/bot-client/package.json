  },
  "dependencies": {
    "@tzurot/common-types": "workspace:*",
    "discord.js": "^14.14.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.0.0",
    "redis": "^5.9.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "dotenv": "^17.2.3"
  }
}
