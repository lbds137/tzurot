{
  "name": "@tzurot/api-gateway",
  "version": "3.0.0-beta.46",
  "private": true,
  "type": "module",
  "description": "API gateway service for Tzurot bot",
  "main": "dist/index.js",
  "scripts": {
    "clean": "find src -name '*.js' -type f -delete && find src -name '*.js.map' -type f -delete",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "pretest": "npm run clean",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@tzurot/common-types": "workspace:*",
    "@tzurot/embeddings": "workspace:*",
    "bullmq": "^5.66.5",
    "express": "^5.2.1",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.9.2",
    "openai": "^6.16.0",
    "pg": "^8.17.1",
    "pino": "^10.2.1",
    "pino-http": "^11.0.0",
    "redis": "^5.10.0",
    "sharp": "^0.34.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.9",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.2.2"
  }
}
